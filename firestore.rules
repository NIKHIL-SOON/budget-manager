rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. User Data (Private)
    // Only the authenticated user can access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow access to subcollections (like transactions, goals) if they exist under the user
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 2. Squad Chat Data (Shared/Public for Auth Users)
    // Any authenticated user can read/write messages to any chat room
    // This supports the collaborative bill splitting and group chat features
    match /chats/{chatId}/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Default: Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
